{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*"]
}
